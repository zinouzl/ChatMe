<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_people"

    >

    <fragment

        android:id="@+id/navigation_my_account"
        android:name="com.example.sony.chatme.ui.my_account.MyAccountFragment"
        android:label="@string/my_account"


        >

    </fragment>

    <fragment
        android:id="@+id/navigation_people"

        android:name="com.example.sony.chatme.ui.people.PeopleFragment"
        android:label="@string/people"
        tools:layout="@layout/fragment_people" >

        <action
            android:id="@+id/action_navigation_people_to_navigation_my_account"
            app:destination="@id/navigation_my_account"
            app:popUpTo="@id/navigation_people"
            app:popUpToInclusive="true"
             />
    </fragment>


</navigation>